<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsaLife.RegisterPage"
             BackgroundColor="#00778b">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <StackLayout Orientation="Horizontal">
                <Entry Placeholder="First Name"></Entry>
                <Entry Placeholder="Last Name"></Entry>
            </StackLayout>
            <Entry Placeholder="Email"/>
            <Entry Placeholder="Password" IsPassword="True"/>
            <Entry Placeholder="Confirm Password" IsPassword="True"/>
            <Label Text="Date Of Birth"/>
            <DatePicker></DatePicker>
            <Label Text="Address"/>
            <Editor></Editor>
            <StackLayout Orientation="Horizontal">
                <Label Text="Save Password"/>
                <Switch IsToggled="False"/>
            </StackLayout>
            <Button Text="Sign Up"/>
            <Label Text="Already have account? Sign In" TextColor="LightBlue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>