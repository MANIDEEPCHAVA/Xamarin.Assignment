<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsaLife.RegisterPage"
             BackgroundColor="#00778b">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="5">
            <Entry Placeholder="First Name" PlaceholderColor="White" TextColor="White" />
            <Entry Placeholder="Last Name" PlaceholderColor="White" TextColor="White"/>
            <Entry Placeholder="Email" PlaceholderColor="White" TextColor="White"/>
            <Entry Placeholder="Password" IsPassword="True" PlaceholderColor="White" TextColor="White"/>
            <Entry Placeholder="Confirm Password" IsPassword="True" PlaceholderColor="White" TextColor="White"/>
            <Label Text="Date Of Birth" TextColor="White" />
            <DatePicker TextColor="White"></DatePicker>
            <Entry Placeholder="Address"  PlaceholderColor="White" TextColor="White"/>
            
            <Button Text="Sign Up"/>
            <Label Text="Already have account?" TextColor="LightBlue"/>
            <Button 
                Text="Sign In"
                Clicked="Button_Clicked_1"
                    ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>